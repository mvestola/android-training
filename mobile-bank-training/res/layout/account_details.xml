<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
        >
    <RelativeLayout
        android:id="@+id/widget127"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="20dp">
    <LinearLayout
            android:id="@+id/widget130"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true">
        <TextView
                android:id="@+id/accountDetailsNameTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tilin nimi:" />
        <TextView
                android:id="@+id/accountDetailsName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <TextView
                android:id="@+id/accountDetailsIbanTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tilinumero:"/>
        <TextView
                android:id="@+id/accountDetailsIban"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />
        <TextView
                android:id="@+id/accountDetailsAmountTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tilin saldo:" />
        <TextView
                android:id="@+id/accountDetailsAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />
        <TextView
                android:id="@+id/accountDetailsTransactionsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Tilitapahtumat:" />
        <GridView
                android:id="@+id/accountDetailsTransactionsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numColumns="5"
                android:columnWidth="20dp" />
    </LinearLayout>
</RelativeLayout>
</ScrollView>